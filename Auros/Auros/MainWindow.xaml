<Window x:Class="Auros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auros"
        mc:Ignorable="d"
        Title="Automated Stroke Assessment System (AUROS)" Height="600" Width="1280" Loaded="Window_Loaded" Closing="Window_Closing">

    <Grid>
        <Grid x:Name="LoginGrid" Visibility="Collapsed">

        </Grid>

        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.75*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" x:Name="TabGrid" Background="#FF4B002E">
                <StackPanel Orientation="Vertical">
                    <Button Background="Transparent" Click="Train_Click">
                        <Image Source="data/icon/cloud305.png" ></Image>
                    </Button>
                    <Button Background="Transparent" Click="Score_Click">
                        <Image Source="data/icon/cloud306.png"></Image>
                    </Button>
                    <Button Background="Transparent" Click="Report_Click">
                        <Image Source="data/icon/shared1.png"></Image>
                    </Button>
                    <Button Background="Transparent" Click="Setting_Click">
                        <Image Source="data/icon/settings49.png"></Image>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Column="1" x:Name="ListGrid" >
                <ListView Name="AssessmentListView" SelectionChanged="AssessmentListView_SelectionChanged" ItemsSource="{Binding assessmentLibrary}" Background="#FFE4E4E4">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding AssessmentName}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>

            <Grid Grid.Column="2" x:Name="ContentGrid">
                <Grid x:Name="ContentTrainGrid">
                    <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Source="{Binding ImageSource}" Stretch="UniformToFill" />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
        <StatusBar Grid.Row="2" HorizontalAlignment="Stretch" Name="statusBar" VerticalAlignment="Bottom" Background="White" Foreground="Gray">
            <StatusBarItem Content="{Binding StatusText}" />
        </StatusBar>
    </Grid>
</Window>

<Window x:Class="Auros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auros"
        mc:Ignorable="d"
        Title="Automated Stroke Assessment System (AUROS)" Height="600" Width="1280">
    
    <Grid>
        <Grid x:Name="LoginGrid" Visibility="Collapsed">

        </Grid>
        
        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition Width="0.2*"/>
                <ColumnDefinition Width="0.75*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" x:Name="TabGrid" Background="#FF4B002E">
                <StackPanel Orientation="Vertical">
                    <Button Background="Transparent" Click="Train_Click">
                        <Image Source="data/icon/cloud305.png" ></Image>
                    </Button>
                    <Button Background="Transparent" Click="Score_Click">
                        <Image Source="data/icon/cloud306.png"></Image>
                    </Button>
                    <Button Background="Transparent" Click="Report_Click">
                        <Image Source="data/icon/shared1.png"></Image>
                    </Button>
                    <Button Background="Transparent" Click="Setting_Click">
                        <Image Source="data/icon/settings49.png"></Image>
                    </Button>
                </StackPanel>
            </Grid>
            
            <Grid Grid.Column="1" x:Name="ListGrid" Background="#FFE4E4E4">
                <Grid x:Name="ListTrainGrid">
                    <TextBlock Text="list train grid"/>
                </Grid>
                <Grid x:Name="ListScoreGrid">
                    <TextBlock Text="list score grid"/>
                </Grid>
                <Grid x:Name="ListReportGrid">
                    <TextBlock Text="list report grid"/>
                </Grid>
                <Grid x:Name="ListSettingGrid">
                    <TextBlock Text="list setting grid"/>
                </Grid>
            </Grid>
            
            <Grid Grid.Column="2" x:Name="ContentGrid">
                <Grid x:Name="ContentTrainGrid">
                    <TextBlock Text="content train grid"/>
                </Grid>
                <Grid x:Name="ContentScoreGrid">
                    <TextBlock Text="content score grid"/>
                </Grid>
                <Grid x:Name="ContentReportGrid">
                    <TextBlock Text="content report grid"/>
                </Grid>
                <Grid x:Name="ContentSettingGrid">
                    <TextBlock Text="content setting grid"/>
                </Grid>
            </Grid>     
        </Grid>        
    </Grid>
</Window>
